<div class="block" style="background-color: inherit; border-bottom: none; background: none;">
	<div class="block">
		<div class="block_head">
			<div class="bheadl"></div>
			<div class="bheadr"></div>

			<h2>Template: <%= @template.title %></h2>
		</div>		<!-- .block_head ends -->
		<div class="block_content">
      <% if notice %>
      <div class="message success"><p><%= notice %></p></div>
      <% end %>

      <p>
        <b>Title:</b>
        <%= @template.title %>
      </p>

      <p>
        <b>Body:</b><br />
        <%= @template.body.html_safe %>
      </p>


      <%= link_to 'Edit', edit_template_path(@template) %> |
      <%= link_to 'Back', templates_path %>
		</div>		<!-- .block_content ends -->

		<div class="bendl"></div>
		<div class="bendr"></div>
	</div>		<!-- .block ends -->
	
</div>
