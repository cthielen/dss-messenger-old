<div class="block" style="background-color: inherit; border-bottom: none; background: none;">
	<div class="block">
		<div class="block_head">
			<div class="bheadl"></div>
			<div class="bheadr"></div>

			<h2>Message Details</h2>
		</div>		<!-- .block_head ends -->
		<div class="block_content">
		  <%= form_for(@message) do |f| %>
				<p>
				  <label>Template:</label> <br />
					<select class="styled">
						<option>None</option>
						<option>Maintenance Scheduled</option>
						<option>Service Update</option>
						<option>Emergency/Unexpected Outage</option>
					</select>
				</p>

		    <p>
		      <%= f.label :from %><br />
		      <%= f.text_field :from, :class => "text small", :disabled => 'disabled', :value => current_user.first + ' ' + current_user.last %>
				</p>
				
				<%= f.hidden_field :loginid, :value => current_user.loginid %>

    		<p>
					<%= f.label :to %><br />
					<input type="text" name="message[to_tokens]" class="text small" id="to_tokens" data-pre="" />
    		</p>
				
				<p>
					<%= f.label :subject %><br />
		      <%= f.text_field :subject, :class => "text small" %>
				</p>
			
			  <p>
					<%= f.label :message %><br />
		      <%= f.text_area :body, :class => "wysiwyg" %>
				</p>
				
		    <p>
		      <%= f.label :expires, "Expiration date" %>
		      <%= f.text_field :expires, :class => "text date_picker" %>
				</p>
				
				
				<p>
				  <%= f.label :flash, "Message type" %><br />
				  <%= f.select :flash, [['E-Mail and Inbox', false], ['Flash Announcement', true]], {}, :class => "styled" %>
				</p>
				
				<p align="center">
				  <%= f.submit :class => "submit long alert", :value => "Revoke Message" %>
				</p>
			<% end %>
		</div>		<!-- .block_content ends -->

		<div class="bendl"></div>
		<div class="bendr"></div>
	</div>		<!-- .block ends -->
	
</div>
